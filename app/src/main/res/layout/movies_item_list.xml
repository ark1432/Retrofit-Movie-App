<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.example.retrofit_movie_app_ex.model.Movie" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            app:cardCornerRadius="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    bind:posterPath="@{movie.posterPath}"
                    android:layout_width="150dp"
                    android:layout_height="250dp"
                    android:id="@+id/movieName"/>
                <TextView
                    android:id="@+id/tvid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{Integer.toString(movie.id)}"/>
                <TextView
                    android:id="@+id/tvOriginalLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{movie.originalLanguage}"/>
                <TextView
                    android:id="@+id/tvPopularity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{Double.toString(movie.popularity)}"/>

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{movie.releaseDate}"/>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{movie.title}"/>

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{Double.toString(movie.voteAverage)}"/>
                <TextView
                    android:id="@+id/Rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{Integer.toString(movie.voteCount)}"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</layout>